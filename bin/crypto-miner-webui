:author: Ronan Delacroix
"""
import argparse
import os

if __name__ == "__main__":

    parser = argparse.ArgumentParser(
        description="""Kontron Crypto Currency Miner Web UI""",
        add_help=False
    )
    parser.add_argument('wallet_address', help='Electromine Wallet Address.')
    args = vars(parser.parse_args())
    wallet = args.get('wallet_address')
    os.environ['ELECTROMINE_WALLET'] = wallet

    import crypto_miner_webui

    crypto_miner_webui.app.jinja_env.auto_reload = True
    crypto_miner_webui.app.config['TEMPLATES_AUTO_RELOAD'] = True
    crypto_miner_webui.app.run(debug=True, port=5050)

